<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>bin</id>
  <formats>
    <format>dir</format>
    <!--format>tar.gz</format-->
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/../input/target</directory>
      <includes>
	<include>stockstat*jar-with-dependencies.jar</include>
      </includes>
      <outputDirectory>lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../web/target</directory>
      <includes>
	<!--include>stockstat*.jar</include-->
	<include>stockstat*.war</include>
      </includes>
      <outputDirectory>lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../core/target</directory>
      <includes>
	<include>stockstat*.jar</include>
      </includes>
      <outputDirectory>lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../eureka/target</directory>
      <includes>
	<include>stockstat*.jar</include>
      </includes>
      <outputDirectory>lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../bin</directory>
      <includes>
	<include>*</include>
      </includes>
      <outputDirectory>bin</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/</directory>
      <includes>
	<include>COPYING</include>
      </includes>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/</directory>
      <includes>
	<include>DOCUMENTATION.pdf</include>
      </includes>
      <outputDirectory/>
    </fileSet>
  </fileSets>
