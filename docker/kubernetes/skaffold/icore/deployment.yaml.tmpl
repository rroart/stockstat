apiVersion: apps/v1
kind: Deployment
metadata:
  name: icore
  labels:
    app: icore
spec:
  replicas: 1
  selector:
    matchLabels:
      app: icore
  template:
    metadata:
      labels:
        app: icore
    spec:
      containers:
      - name: icore
        image: icore
        ports:
        - containerPort: 8000
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: icore
  labels:
    app: icore
spec:
  type: NodePort
  ports:
  - port: 8000
    name: debug
    protocol: TCP
    targetPort: 8000
  - port: 80
    name: web
    protocol: TCP
    targetPort: 80
  selector:
    app: icore
  sessionAffinity: None  
status:
  loadBalancer: {}    
---
apiVersion: networking.k8s.io/v1
kind: IngressClass
metadata:
  labels:
    app.kubernetes.io/component: controller
  name: stockstat-icore
  annotations:
    ingressclass.kubernetes.io/is-default-class: "false"
spec:
  controller: k8s.io/ingress-nginx
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: name-virtual-host-ingress-icore
spec:
  ingressClassName: stockstat-icore
  rules:
  - host: $MYASERVER
    http:
      paths:
      - pathType: Prefix
        path: "/"
        backend:
          service:
            name: icore-debug
            port:
              number: 8000
          service:
            name: icore
            port:
              number: 80
