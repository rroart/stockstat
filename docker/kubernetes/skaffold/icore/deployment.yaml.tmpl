apiVersion: apps/v1
kind: Deployment
metadata:
  name: icore
  labels:
    app: icore
spec:
  replicas: 1
  selector:
    matchLabels:
      app: icore
  template:
    metadata:
      labels:
        app: icore
    spec:
      containers:
      - name: icore
        image: icore
        #imagePullPolicy: Never
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: icore
  labels:
    app: icore
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 80
  selector:
    app: icore
  sessionAffinity: None  
status:
  loadBalancer: {}    
---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: name-virtual-host-ingress-icore
  annotations:
    kubernetes.io/ingress.class: "nginx"
    nginx.ingress.kubernetes.io/proxy-read-timeout: "1800"
    nginx.ingress.kubernetes.io/proxy-send-timeout: "1800"
spec:
  rules:
  - host: $MYISERVER
    http:
      paths:
      - backend:
          serviceName: icore
          servicePort: 80
