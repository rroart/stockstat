apiVersion: skaffold/v2beta1
kind: Config
metadata:
  name: stockstat-core
build:
  artifacts:
  - image: stockstat-core$IMGID
    context: ../../..
    docker:
      dockerfile: docker/cloud/core/Dockerfile
      buildArgs:
        distlib: '{{.DISTLIB}}'
        distjar: '{{.COREJAR}}'
        mywebport: "80"
        mydbserver: '{{.MYDBSERVER}}'
        mydbserverport: '{{.MYDBSERVERPORT}}'
        mydbserverdb: '{{.MYDBSERVERDB}}'
        myconfig: '{{.MYCONFIG}}'
        mydebug: '{{.MYDEBUG}}'
  - image: stockstat-icore$IMGID
    context: ../../..
    docker:
      dockerfile: docker/cloud/iclij/Dockerfile
      buildArgs:
        distlib: '{{.DISTLIB}}'
        distjar: '{{.ICOREJAR}}'
        myserver: '{{.CORESERVER}}'
        myport: "80"
        myaport: "80"
        myiport: "80"
        mywebport: "80"
        mydbserver: '{{.MYDBSERVER}}'
        mydbserverport: '{{.MYDBSERVERPORT}}'
        mydbserverdb: '{{.MYDBSERVERDB}}'
        myconfig: '{{.MYICONFIG}}'
        mydebug: '{{.MYDEBUG}}'
  - image: stockstat-iwebcore$IMGID
    context: ../../..
    docker:
      dockerfile: docker/cloud/iclij/Dockerfile
      buildArgs:
        distlib: '{{.DISTLIB}}'
        distjar: '{{.IWEBCOREJAR}}'
        myaserver: '{{.ACORESERVER}}'
        myiserver: '{{.ICORESERVER}}'
        myserver: '{{.CORESERVER}}'
        myport: "80"
        myaport: "80"
        myiport: "80"
        mywebport: "80"
        mydbserver: '{{.MYDBSERVER}}'
        mydbserverport: '{{.MYDBSERVERPORT}}'
        mydbserverdb: '{{.MYDBSERVERDB}}'
        myconfig: '{{.MYICONFIG}}'
        mydebug: '{{.MYDEBUG}}'
  - image: stockstat-sim$IMGID
    context: ../../..
    docker:
      dockerfile: docker/cloud/iclij/Dockerfile
      buildArgs:
        distlib: '{{.DISTLIB}}'
        distjar: '{{.SIMJAR}}'
        mydbserver: '{{.MYDBSERVER}}'
        mydbserverport: '{{.MYDBSERVERPORT}}'
        mydbserverdb: '{{.MYDBSERVERDB}}'
        myconfig: '{{.MYSCONFIG}}'
        mydebug: '{{.MYDEBUG}}'
  - image: stockstat-evolve$IMGID
    context: ../../..
    docker:
      dockerfile: docker/cloud/iclij/Dockerfile
      buildArgs:
        distlib: '{{.DISTLIB}}'
        distjar: '{{.EVOLVEJAR}}'
        mydbserver: '{{.MYDBSERVER}}'
        mydbserverport: '{{.MYDBSERVERPORT}}'
        mydbserverdb: '{{.MYDBSERVERDB}}'
        myconfig: '{{.MYECONFIG}}'
        mydebug: '{{.MYDEBUG}}'
deploy:
  kubectl:
    manifests:
    - core/deployment.yaml
    - icore/deployment.yaml
    - iwebcore/deployment.yaml
    - sim/deployment.yaml
    - evolve/deployment.yaml
