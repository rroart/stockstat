apiVersion: apps/v1
kind: Deployment
metadata:
  name: evolve$APPID
  labels:
    app: evolve$APPID
spec:
  replicas: 1
  selector:
    matchLabels:
      app: evolve$APPID
  template:
    metadata:
      labels:
        app: evolve$APPID
    spec:
      containers:
      - name: evolve
        image: evolve$IMGID
        ports:
        - containerPort: 8000
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: evolve$APPID
  labels:
    app: evolve$APPID
spec:
  type: NodePort
  ports:
  - port: 8000
    name: debug
    protocol: TCP
    targetPort: 8000
  selector:
    app: evolve$APPID
  sessionAffinity: None  
status:
  loadBalancer: {}    
