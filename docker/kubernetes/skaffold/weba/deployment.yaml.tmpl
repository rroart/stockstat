apiVersion: apps/v1
kind: Deployment
metadata:
  name: weba
  labels:
    app: weba
spec:
  replicas: 1
  selector:
    matchLabels:
      app: weba
  template:
    metadata:
      labels:
        app: weba
    spec:
      containers:
      - name: weba
        image: weba
        #imagePullPolicy: Never
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: weba
  labels:
    app: weba
spec:
  type: NodePort
  ports:
  - port: 80
    protocol: TCP
    targetPort: 80
  selector:
    app: weba
  sessionAffinity: None  
status:
  loadBalancer: {}    
---
apiVersion: networking.k8s.io/v1
kind: IngressClass
metadata:
  labels:
    app.kubernetes.io/component: controller
  name: stockstat-weba
  annotations:
    ingressclass.kubernetes.io/is-default-class: "false"
spec:
  controller: k8s.io/ingress-nginx
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: name-virtual-host-ingress-weba
spec:
  ingressClassName: stockstat-weba
  rules:
  - host: $MYWEB
    http:
      paths:
      - pathType: Prefix
        path: "/"
        backend:
          service:
            name: weba
            port:
              number: 80
